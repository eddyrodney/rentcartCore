@model RentCar.Models.Inspeccion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Inspeccion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ralladuras" /> @Html.DisplayNameFor(model => model.Ralladuras)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CantidadCombustible" class="control-label"></label>
                <input asp-for="CantidadCombustible" class="form-control" />
                <span asp-validation-for="CantidadCombustible" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GomaRepuesta" /> @Html.DisplayNameFor(model => model.GomaRepuesta)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Gato" /> @Html.DisplayNameFor(model => model.Gato)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RoturaCristal" /> @Html.DisplayNameFor(model => model.RoturaCristal)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GomaSupDerecha" /> @Html.DisplayNameFor(model => model.GomaSupDerecha)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GomaSupIzquierda" /> @Html.DisplayNameFor(model => model.GomaSupIzquierda)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GomaTraseraDerecha" /> @Html.DisplayNameFor(model => model.GomaTraseraDerecha)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GomaTraseraIzquierda" /> @Html.DisplayNameFor(model => model.GomaTraseraIzquierda)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IdRenta" class="control-label"></label>
                <input asp-for="IdRenta" class="form-control" />
                <span asp-validation-for="IdRenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-info">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
